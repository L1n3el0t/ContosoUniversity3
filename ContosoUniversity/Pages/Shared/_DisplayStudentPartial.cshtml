@model ContosoUniversity.Models.Student
@{
    var showButtons = ViewData["ShowButtons"] as bool? ?? false;
}

    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.FirstMidName)
        </td>
        <td>
        @Html.DisplayFor(modelItem => Model.EnrollmentDate)
        </td>
    @if (showButtons)
    {
          <td>
        <a asp-page="./Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-page="./Details" asp-route-id="@Model.ID">Details</a> |
        <a asp-page="./Delete" asp-route-id="@Model.ID">Delete</a>
        </td>
    

    }

</tr>